{
  "version": 2,
  "builds": [
    {
      "src": "backend/django_portfolio/vercel.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/django_portfolio/vercel.py"
    },
    {
      "src": "/admin-api/(.*)",
      "dest": "backend/django_portfolio/vercel.py"
    },
    {
      "src": "/media/(.*)",
      "dest": "backend/django_portfolio/vercel.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "backend/django_portfolio/vercel.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "django_portfolio.settings",
    "DEBUG": "0",
    "ALLOWED_HOSTS": "*.vercel.app,*.now.sh"
  }
}
