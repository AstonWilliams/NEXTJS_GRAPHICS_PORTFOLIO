{
  "version": 2,
  "builds": [
    {
      "src": "backend/django_portfolio/vercel_app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/django_portfolio/vercel_app.py"
    },
    {
      "src": "/admin-api/(.*)",
      "dest": "backend/django_portfolio/vercel_app.py"
    },
    {
      "src": "/media/(.*)",
      "dest": "backend/django_portfolio/vercel_app.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "backend/django_portfolio/vercel_app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "django_portfolio.settings"
  }
}
